<%= bootstrap_flash %>
    <h2>Login
    <span class="already">Already a member? Sign in below.</span>
    </h2>
   
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="fields">
        <div class="form-field-names"><%= f.label :email %></div>
        <div class="form-field"><%= f.email_field :email, :autofocus => true %></div>
        <div class="clr"></div>
    </div>
    <div class="fields">
        <div class="form-field-names"><%= f.label :password %></div>
        <div class="form-field"><%= f.password_field :password %></div>
        <div class="clr"></div>
    </div>
     <% if devise_mapping.rememberable? -%>
    <div class="fields">	
        <div class="form-field-names">&nbsp;</div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
		 <div class="form-field"><%= link_to "Forgot your password?", new_password_path(resource_name) %></div>
		<% end -%>
		        
        <div class="clr"></div>
    </div>
    <% end -%>
     
    <div class="fields">
        <div class="form-field-names">&nbsp;</div>
        <div class="form-field"><%= f.submit "Sign in" %></div>
        <div class="clr"></div>
    </div>
<%end%>

<% render "devise/shared/links" %>
