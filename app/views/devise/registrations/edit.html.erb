

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
 <div class="change_password">
 	<h2>Change your Password</h2>
 	<div class="change_password_fields">  
	  <div class="change_password_names"><%= f.label :password, "New password" %></div>
	   <div class="change_password_form-field"><%= f.password_field :password, :autofocus => true,:required=>true %></div>
	   <div class="clr"></div>
  </div>
<div class="change_password_fields">
  <div class="change_password_names"><%= f.label :password_confirmation, "Confirm new password" %></div>
  <div class="change_password_form-field"><%= f.password_field :password_confirmation,:required=>true %></div>
<div class="clr"></div></div>
 <div class="change_password_fields">
        <div class="change_password_names">&nbsp;</div>
  <div class="login_button"><%= f.submit "Change my password" %></div>
  <div class="clr"></div>
<% end %>
</div>
<% render "devise/shared/links" %>
