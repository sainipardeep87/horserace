<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
<div class="fields">
  <div class="form-field-names"><%= f.label :email %></div>
  <div class="form-field"><%= f.email_field :email, :autofocus => true %></div>
<div class="clr"></div>
</div>
 <div class="fields">
        <div class="form-field-names">&nbsp;</div>
        <div class="form-field"><%= f.submit "Send me reset password instructions" %></div>
        <div class="clr"></div>
    </div>
  
<% end %>

<%= render "devise/shared/links" %>
