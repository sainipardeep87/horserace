<h1>Contacts</h1>
<%unless @users.empty?%>
<table class="table">
	<thead>
		<tr>
			<th>Client Name</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Status</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		
		<%@users.each do |user|%>
		<tr class="tr_bg_yellow">
			<td><strong><%unless user.is_this_trial?%>
				<%=user.client_name %>
				<%else%>
				<%=user.client_name %>T
				<%end%></strong></td>
			<td><%=user.email%></td>
			<td><%=user.phone%></td>
			<td><%=user.status%></td>
			<td><%= link_to image_tag('../assets/edit_icon.png').html_safe, edit_user_path(user) %> </td>
           <!-- <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td> -->
		</tr>
		
		<%end%>
	</tbody>
</table>
<%else%>
Sorry record not found.
<%end%>
