<h1>Edit Client</h1>
<% if @user.errors.any? %>   
      <ul class="alert fade in alert-error">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    
  <% end %>
<%= form_for @user do |f| %>
  
   <div class="change_password_fields">
   <div class="change_password_names"><%= f.label :client_name %></div>
    	<div class="change_password_form-field"><%= f.text_field :client_name, :autofocus => true,:required=>true %></div>
  	    <div class="clr"></div>
   </div>
  <div class="change_password_fields">
   <div class="change_password_names"><%= f.label :balance %></div>
	   <div class="change_password_form-field"><%= f.text_field :balance,:required=>true%></div>
	  <div class="clr"></div>
  </div>
  <div class="change_password_fields">
   <div class="change_password_names"><%= f.label :tier_id %></div>
	  <div class="change_password_form-field"><%= f.collection_select(:tier_id, Tier.all, :id, :name, {:include_blank => "default odd"},:class=>"tier_select") %></div>
	  <div class="clr"></div>
  </div>
  <div class="change_password_fields">
   <div class="change_password_names"><%= f.label :phone %></div>
	  <div class="change_password_form-field"><%= f.text_field :phone %></div>
	  <div class="clr"></div>
  </div>
  <div class="change_password_fields">
   <div class="change_password_names"><%= f.label :email %></div>
	  <div class="change_password_form-field"><%= f.email_field :email,:required=>true,:class=>"text_class"%></div>
	<div class="clr"></div>
</div>
  <div class="change_password_fields">
   <div class="change_password_names"><% f.label :password %></div>
	  <div class="change_password_form-field"><% f.password_field :password,:required=>true %></div>
	 <div class="clr"></div>
 </div>
  <div class="change_password_fields">
   <div class="change_password_names"><% f.label :password_confirmation %></div>
	  <div class="change_password_form-field"><% f.password_field :password_confirmation,:required=>true %></div>
	 <div class="clr"></div>
 </div>
  <div class="change_password_fields">
   <div class="change_password_names">&nbsp;</div>
	 <div class="login_button"><%= f.submit "Update"%></div>
	<div class="clr"></div>
</div>
	<% end %>


